<section id="login-view">

  <h2> Log In </h2>

  {{#if errorMessage}}
  <p class="error-message">
    {{ errorMessage }}
  </p>
  {{/if}}

  <form action="/auth/login" method="post">
    <div class="form-group">
      <label for="name-input"> Name </label>
      <input type="text" name="username" id="name-input" placeholder="e.g., Da Fuckn' Poker master" class="form-control">
    </div>

    <div class="form-group">
      <label for="password-input"> Password </label>
      <input type="password" name="password" id="password-input" placeholder="e.g., ••••••••••••" class="form-control">
    </div>

    <button> Log In </button>
  </form>

  <p>
    Don't have an account?
    <a href="/auth/signup">
      Create an account.
    </a>
  </p>
</section>