<section id="gameDetail">
  <div class="gameInfo">
    <img src="{{game.photo}}" alt="Game Image">
    <hr>
    {{#unless usergame}}
    <form action="/game/add/{{game._id}}" method="post">
    <input type="submit" class="btn btn-warning" name="" value="JOIN GAME">
    </form>
    {{/unless}}
    
    <h3>Hosted By: {{game.hostId.username}}</h3>
    <h4>{{game.description}}</h4>
    <p><span>{{game.date}}</span> || <span>{{game.time}}</span></p>
    <p>Max Players: {{game.playersNum}}</p>
    <p>Min Level: {{game.level}}</p>
    <p>Buy-In: {{game.buyIn}}</p>
    <p>Blinds: {{game.blinds}}</p>
    
    <p>Numbe of players: {{game.playersNum}}</p>
    <p>Numbe of players: {{game.playersNum}}</p>
  </div>

  <span>{{game.status}}</span>

  <div class="gamePlayers">
    <h3>PLAYERS JOINED:</h3>
    {{#each game}}
    {{#each this.players}}
    <div class="player">
      <h4 class="player-name">{{this.username}}</h4>
      <h4 class="comment-content">LV: {{this.level}}</h4>
    </div>
    {{/each}}
    {{/each}}
  </div>
  <div class="graph-game">

  </div>
  <button class="btn btn-danger">
    <a href="/game/list">BACK TO LIST</a>
  </button>

  <div id="map"></div>
</section>
<script>
   window.game = {{{ gameStr }}}
</script>
<script src="/javascripts/gameMap.js"></script>