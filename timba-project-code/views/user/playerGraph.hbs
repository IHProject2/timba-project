<section>
  <h2>User Stats: {{{player.username}}}</h2>
  {{#if errorMessage}}
  <p class="error-message">
    {{ errorMessage }}
  </p>
  {{/if}}
  <div>
    <h3>User: {{{player.username}}}</h3>
    <p>Total Games {{{player.totalGames}}}</p>
    <p>Valid Games {{{player.validGames}}}</p>
    <p>Player Level {{{player.level}}}</p>
    <p>Vision Level: {{{player.vision}}}</p>
    <p>Self COntrol: {{{player.selfControl}}}</p>
    <p>Courage: {{{player.courage}}}</p>
    <p>Sharp: {{{player.sharp}}}</p>
  </div>
  <button> Go back </button>
  <div>
    <h3>My stats</h3>
    <canvas id="myChart" width="250px" height="250px"></canvas>

    <button class="btn btn-info">
      <a href='/player/compareusers/{{player._id}}'>Want to campare?</a>
    </button>
  </div>

</section>
<script>
    window.player = {{{ playerStr }}}:
</script>
<script src="/javascripts/addGraph.js"></script>